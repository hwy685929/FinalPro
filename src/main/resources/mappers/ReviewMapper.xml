<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace = "org.mp.mapper.ReviewMapper">

	<insert id="insert">
	insert into review(reno, rest_id, review,reviewer)
	values(seq_review.nextval,#{restId},#{review},#{reviewer})
	</insert>
	
	
	<select id="read" resultType="org.mp.domain.ReviewVO">
		select * from review where reno = #{reno}
	</select>
	
	<delete id="delete">
	 	delete * from review where reno = #{reno}
	</delete>
	
	<update id="update">
		update review set review = #{review} , review_updatedate = sysdate where reno = #{reno}
	</update>
	
	<select id="getListWithPaging" resultType="org.mp.domain.ReplyVO">
		select * from review 
		where reno=#{reno}
		order by reno asc
	</select>
</mapper>
